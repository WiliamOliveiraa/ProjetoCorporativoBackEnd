@page
@model ProjetoCorporativo.Pages.Demandas.DeleteModel
@{
    ViewData["Title"] = "Excluir Demanda";
}

<h1>Excluir Demanda</h1>

<h3>Tem certeza que deseja excluir a seguinte demanda?</h3>
<div>
    <h4>Demanda</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            TÃ­tulo
        </dt>
        <dd class="col-sm-10">
            @Model.Demanda.Titulo
        </dd>
        <dt class="col-sm-2">
            Status
        </dt>
        <dd class="col-sm-10">
            @Model.Demanda.Status
        </dd>
        <dt class="col-sm-2">
            Prazo
        </dt>
        <dd class="col-sm-10">
            @Model.Demanda.Prazo.ToShortDateString()
        </dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="Demanda.Id" />
        <button type="submit" class="btn btn-danger">Excluir</button>
        <a asp-page="Index" class="btn btn-secondary">Cancelar</a>
    </form>
</div>
